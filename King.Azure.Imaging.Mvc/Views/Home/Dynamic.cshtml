@model IEnumerable<King.Azure.Imaging.Entities.ImageEntity>
@{
    var random = new Random();
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Streaming <small>(/api/image?file=*&width=*)</small></h1>
        </div>
        @foreach (var entity in Model)
        {
            var width = random.Next(32, 480);
            <div class="col-lg-3 col-md-4 col-xs-6">
                <a href="/api/image?file=@entity.FileName&width=@width" target="_blank">
                    <img class="img-responsive" src="/api/image?file=@entity.FileName&width=@width" alt="Width (@width)">
                </a>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Streaming <small>(/api/image?file=*&width=*&height=*)</small></h1>
        </div>
        @foreach (var entity in Model)
        {
            var width = random.Next(32, 480);
            var height = random.Next(32, 480);
            <div class="col-lg-3 col-md-4 col-xs-6">
                <a href="/api/image?file=@entity.FileName&width=@width&height=@height" target="_blank">
                    <img class="img-responsive" src="/api/image?file=@entity.FileName&width=@width&height=@height" alt="Height (@height), Width (@width)">
                </a>
            </div>
        }
    </div>
</div>