@model IEnumerable<King.Azure.Imaging.Entities.ImageEntity>

@{
    var url = "http://127.0.0.1:10000/devstoreaccount1";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Direct <small>(@url/*)</small></h1>
        </div>
        @foreach (var entity in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <img class="img-responsive" src="@url/@entity.RelativePath">
            </div>
        }
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Streaming <small>(/api/image?file=*)</small></h1>
        </div>
        @foreach (var entity in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <img class="img-responsive" src="/api/image?file=@entity.FileName">
            </div>
        }
    </div>
</div>